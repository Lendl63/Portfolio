{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "convert-images": "node scripts/convert_images.js",
    "build-js": "esbuild src/js/*.js --outdir=dist/js --bundle --format=esm --minify --splitting",
    "build-css": "npx cleancss -o dist/css/styles.min.css src/css/root.css src/css/style.css src/css/canvas.css src/css/responsive.css",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "esbuild": "^0.18.0",
    "sharp": "^0.32.0",
    "clean-css-cli": "^5.3.0"
  }
}
